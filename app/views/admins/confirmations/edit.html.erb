<div class="row">
    <div class="col-5">
            <%= form_for(@customer) do |f| %>
                <h3 class="admin_page_title"><%= customer.full_name %>さんの会員詳細/h3>
                <table>
                    <tr>
                        <th>会員ID</th>
                        <th><%= customer.id %></th>
                    </tr>
                    <tr>
                        <th>氏名</th>
                        <th><%= f.text_feild :family_name %> <%= f.text_feild :first_name %></th>
                    </tr>
                    <tr>
                        <th>フチガナ</th>
                        <th><%= f.text_feild :kana_family_name %> <%= f.text_feild :kana_first_name %></th>
                    </tr>
                    <tr>
                        <th>郵便番号</th>
                        <th><%= f.text_feild :postal_code %></th>
                    </tr>
                    <tr>
                    <th>住所</th>
                        <th><%= f.text_feild :address %></th>
                    </tr>
                    <tr>
                        <th>電話番号</th>
                        <th><%= f.text_feild :phone_number %></th>
                    </tr>
                    <tr>
                        <th>メールアドレス</th>
                        <th><%= f.text_feild :email %></th>
                    </tr>
                    <tr>
                        <label><%= f.radio_button :is_active, "Available" %>有効 </label>
                        <label><%= f.radio_button :is_active, "Invalid" %> 退会済み</label>
                    </tr>
                    <tr>
                     <%= f.submit "変更を保存する" ,class: "btn btn-primary" %>
                    </tr>
                </table>
            <% end %>
        <% end %>
    </div>
</div>
