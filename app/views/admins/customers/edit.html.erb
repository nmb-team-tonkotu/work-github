<div class="row">
    <div class="col-5">

            <%= render 'layouts/errors', obj: @customer %>

            <%= form_for(@customer,url: admins_customer_path(params[:id]) ) do |f| %>
                <h3 class="admin_page_title"><%= @customer.full_name %>さんの会員詳細</h3>
                <table class="admin_edit_form">
                    <tr>
                        <th>会員ID</th>
                        <th><span class="mgl-20"><%= @customer.id %></span></th>
                    </tr>
                    <tr>
                        <th>氏名</th>
                        <th class="form-inline"><%= f.text_field :family_name, class: "form-control mgl-20" %> <%= f.text_field :first_name,class: "form-control  mgl-20" %></th>
                    </tr>
                    <tr>
                        <th>フチガナ</th>
                        <th class="form-inline"><%= f.text_field :kana_family_name, class: "form-control mgl-20" %> <%= f.text_field :kana_first_name, class: "form-control  mgl-20" %></th>
                    </tr>
                    <tr>
                        <th>郵便番号</th>
                        <th class="form-inline"><%= f.text_field :postal_code, class: "form-control mgl-20" %></th>
                    </tr>
                    <tr>
                    <th>住所</th>
                        <th class="form-inline"><%= f.text_field :address, class: "form-control mgl-20" , :size=>"70x10" %></th>
                    </tr>
                    <tr>
                        <th>電話番号</th>
                        <th class="form-inline"><%= f.text_field :phone_number, class: "form-control mgl-20" %></th>
                    </tr>
                    <tr>
                        <th>メールアドレス</th>
                        <th class="form-inline"><%= f.text_field :email, class: "form-control mgl-20" %></th>
                    </tr>
                    <tr>
                        <th>会員ステータス</th>
                        <th>
                            <label class="mgl-20"><%= f.radio_button :is_active, "Available" %>有効 </label>
                            <label class="mgl-20"><%= f.radio_button :is_active, "Invalid" %> 退会済み </label>
                        </th>
                    </tr>
                </table>
                <div class=link-wrapper>
                     <%= f.submit "変更を保存する" ,class: "btn btn-primary" %>
                </div>
            <% end %>
    </div>
</div>
