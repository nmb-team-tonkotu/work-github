<h3 class="admin_page_title">会員一覧</h3>
<div class="row">
    <div class='col-md-offset-2 col-md-7'>
        <table class="admin_customer_table table">
            <thead>
                <tr>
                <th>会員ID</th>
                <th>指名</th>
                <th>メールアドレス</th>
                <th>ステータス</th>
                </tr>
            </thead>
            <tbody>
                <% @customers.each do |customer|%>
                    <tr>
                        <td><%= "customer.id" %></td>
                        <td><%= link_to "customer.full_name",admins_customer_path(customer.id) %></td>
                        <td><%= "customer.address" %></td>
                        <td><%= "customer.is_active" %></td>
                    </tr>
                <%  end %>
                <%= paginate @customers %>
            </tbody>
        </table>
    </div>
</div>

