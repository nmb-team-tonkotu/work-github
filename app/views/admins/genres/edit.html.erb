<div class="row">
	<%= render 'layouts/errors', obj: @genre %>
	<div class="col-xs-7">
		<h2>ジャンル編集画面</h2>
		<div class="edit-genre-form">
			 <%= form_for @genre,:url => { controller: "admins/genres",action: "update"} do |f| %>
             <%= f.label :sweet_genre, "ジャンル" %>
		     <%= f.text_field :sweet_genre %>
             <%= f.radio_button :status, true %>有効  <%= f.radio_button :status, false %>無効
			 <%= f.submit '変更を保存する', class:"btn btn-primary" %>
		    <% end %>
		</div>
	</div>
</div>
