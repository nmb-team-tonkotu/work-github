<div class ="body">
  <div class = "container">
    <div class ="row">
      <div class = "col-xs-7">
        <h3>ジャンル一覧・追加</h3>
           <p id="notice"></p>
        <br>

          <div class ="genre-form">
             <%= form_for @genre, :url => { controller: "admins/genres",action: "create"} do |f| %>
                <%= f.label :sweet_genre, "ジャンル" %>
				<%= f.text_field :sweet_genre %>
                <%= f.radio_button :status, true %>有効  <%= f.radio_button :status, false %>無効
				<%= f.submit '追加', class:"btn btn-primary" %>
			 <% end %>

             <table class ="table table-striped">
					   <thead>

						   <tr>
							   <th>ジャンル</th>
							   <th>状態</th>
						   </tr>
					   </thead>
					   <tbody>
						 <% @genres.each do |genre| %>
					    	<tr>
						      <td><%= genre.sweet_genre %></td>
						      <td><%= genre.status  ? "有効" : "無効" %></td>
                  <td><%= link_to '編集',  edit_admins_genre_path(genre.id),class:"btn btn-primary" %></td>
						    </tr>
					   	<% end %>
					   </tbody>
			 </table>

          </div>

      </div>
    </div>
  </div>
</div>