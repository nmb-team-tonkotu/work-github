<div class="row">
    <div class="col-md-7 col-md-offset-2">
    <h3 class="admin_page_title">注文履歴一覧</h3>
            <table class="table admin_order_table">
                <thead>
                    <tr class="active">
                        <th>購入日時</th>
                        <th>購入者</th>
                        <th>注文個数</th>
                        <th>注文ステータス</th>
                    </tr>
                </thead>
                <% @orders.each do |order| %>
                    <tbody>
                        <tr>
                            <td><%= link_to order.created_at.to_s(:datetime), admins_order_path(order.id), class: "order_link"%></td>
                            <td><%= order.customer.full_name %></td>
                            <td><%= order.order_sweets.count %></td>
                            <td><%= order.status %></td>
                        </tr>
                    </tbody>
                <% end %>
            </table>
        <%= paginate @orders %>
    </div>
</div>