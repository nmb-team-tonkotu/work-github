<div class ="body">
	<div class= "container">
		<div class ="row">


			<div class = "col-md-12">
				<h2>商品一覧</h2>
				<p style="text-align:right;"><%= link_to "", new_admins_sweet_path, class: 'glyphicon glyphicon-plus circle' %></p>


				<table class ="table table-striped">
					<thead>

						<tr>
							<th>商品ID</th>
							<th>商品名</th>
							<th>税抜価格</th>
							<th>ジャンル</th>
							<th>ステータス</th>
						</tr>
					</thead>
					<tbody>
						<% @sweets.each do |sweet| %>
						<tr>
						     <td><%= sweet.id %></td>
						     <td><%= link_to sweet.name,admins_sweet_path(sweet.id) %></td>
						     <td><%= sweet.non_taxed_price %></td>
						     <td><%= sweet.genre.sweet_genre %></td>
						     <td><%=sweet.sell_status  ? "販売中" : "販売停止中" %></td>
						 </tr>

						<%end%>
					</tbody>
				</table>
				<%= paginate @sweets %>
			</div>



	</div>
</div>