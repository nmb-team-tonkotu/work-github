<div class="row">
	<div class="col-xs-8">
		<div class="carts">
			<div class="shopping_cart"><h3>ショッピングカート</h3></div>
			<div class="all_delete_cart">
				<%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, class: "btn btn-danger" %>
			</div>
			<table class="table">
				<thead>
					<tr>
						<th>商品名</th>
						<th>単価(税込)</th>
						<th>数量</th>
						<th>小計</th>
						<th></th>
					</tr>
				</thead>
				<% @sum = 0 %>
				<% @cart_items.each do |cart_item| %>
					<%= form_for(cart_item) do |f| %>
						<tbody>
							<tr>
								<td>
									<%= attachment_image_tag cart_item.sweet, :image, :fill, 50, 50 %>
									<%= cart_item.sweet.name %>
								</td>
								<td>
									<%= "#{(cart_item.sweet.non_taxed_price * 1.10).round }" %>
								</td>
								<td>
									<%= f.number_field :sweet_count, in: 1..10 %>
									<%= f.submit "変更", class: "btn btn-primary" %>
								</td>
								<td>
									<%= "#{(cart_item.sweet.non_taxed_price*cart_item.sweet_count* 1.10).round }"%>
								</td>
								<td>
									<%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %>
								</td>
							</tr>
						</tbody>
					<% end %>
					<% @sum += cart_item.sweet.non_taxed_price*cart_item.sweet_count %>
				<% end %>
			</table>
			<div class="continue_shopping">
				<%= link_to "買い物を続ける", admins_sweets_path, class: "btn btn-primary" %>
			</div>
			<div class="shopping_price_sum">
				<table class="table">
					<thead>
						<tr>
							<th>合計金額</th>
							<th><%= "#{(@sum * 1.10).round}" %></th>
						</tr>
					</thead>
				</table>
			</div>
			<div class="next_infomaiton">
				<%= link_to "情報入力に進む", new_order_path(current_customer), class: "btn btn-success btn-lg" %>
			</div>
		</div>
	</div>
</div>