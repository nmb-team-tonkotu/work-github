<h3 class="customers_page_title">登録情報編集</h3>

<%= form_for @customer, :url => { :controller => :customers, :action => :update } do |f| %>
	<table class="table table-bordered">
		<tr>
			<td class="col-xs-3">名前</td>
			<td>(姓) <%= f.text_field :family_name %></td>
			<td>(名) <%= f.text_field :first_name %></td>
		</tr>
		<tr>
			<td class="col-xs-3">フリガナ</td>
			<td>(セイ) <%= f.text_field :kana_family_name %></td>
			<td>(メイ) <%= f.text_field :kana_first_name %></td>
		</tr>
		<tr>
			<td class="col-xs-3">メールアドレス</td>
			<td><%= f.email_field :email %></td>
		</tr>
		<tr>
			<td class="col-xs-3">郵便番号(ハイフンなし)</td>
			<td><%= f.text_field :postal_code %></td>
		</tr>
		<tr>
			<td class="col-xs-3">住所</td>
			<td><%= f.text_field :address %></td>
		</tr>
		<tr>
			<td class="col-xs-3">電話番号(ハイフンなし)</td>
			<td><%= f.text_field :phone_number %></td>
		</tr>
	</table>

	<%= f.submit "編集内容を保存する", class:"btn btn-primary" %>

	<%= link_to "退会する", customers_close_view_path, class:"btn btn-danger"%>
<% end %>

