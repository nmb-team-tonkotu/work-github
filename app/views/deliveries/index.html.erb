<h2>配送先登録 / 一覧</h2>

<div class="row">
	<%= render "deliveries/delivery_form", delivery: @delivery %>
</div>

<div class="row">
	<div class="col-xs-8">
		<table class="table table-bordered">
			<thead>
				<tr class="active">
					<td>郵便番号</td>
					<td>住所</td>
					<td>宛名</td>
					<td></td>
				</tr>
			</thead>
			<tbody>
				<% @deliveries.each do |delivery| %>
					<tr>
						<td><%= delivery.postal_code %></td>
						<td><%= delivery.address %></td>
						<td><%= delivery.name %></td>
						<td><%= link_to "編集する", edit_delivery_path(delivery.id), class:"btn btn-primary" %>
							<%= link_to "削除する", delivery_path(delivery.id), method: :delete, data: { confirm: '本当に消しますか？' }, class:"btn btn-danger" %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>