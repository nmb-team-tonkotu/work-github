

<div class="row">
  <div class="col-xs-8">

    <h4>新規会員登録</h4>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <table class="table registration_table">
        <tbody>
          <tr>
            <td>名前</td>
            <td>
              <span>(姓)　&nbsp;</span>
              <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %>
            </td>
            <td>
              <span>(名)　&nbsp;</span>
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
            </td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td>
              <span>(セイ)&nbsp;</span>
              <%= f.text_field :kana_family_name, autofocus: true, autocomplete: "kana_family_name" %>
            </td>
            <td>
              <span>(メイ)&nbsp;</span>
              <%= f.text_field :kana_first_name, autofocus: true, autocomplete: "kana_first_name" %>
            </td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td>
              <span>　　&nbsp;&nbsp;&nbsp;</span>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </td>
          </tr>
          <tr>
            <td>郵便番号(ハイフンなし)</td>
            <td>
              <span>　　&nbsp;&nbsp;&nbsp;</span>
              <%= f.text_field :postal_code, autofocus: true, autocomplete: ":postal_code" %>
            </td>
          </tr>
          <tr>
            <td>住所</td>
            <td>
              <span>　　&nbsp;&nbsp;&nbsp;</span>
              <%= f.text_field :address, autofocus: true, autocomplete: ":address" %>
            </td>
          </tr>
          <tr>
            <td>電話番号(ハイフンなし)</td>
            <td>
              <span>　　&nbsp;&nbsp;&nbsp;</span>
              <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
            </td>
          </tr>
          <tr>
            <% if @minimum_password_length %>
              <td>パスワード(<%= @minimum_password_length %>文字以上)</td>
              <td>
                <span>　　&nbsp;&nbsp;&nbsp;</span>
                <%= f.password_field :password, autocomplete: "new-password" %>
              </td>
            <% end %><br />
          </tr>

          <tr>
            <td>パスワード(確認用)</td>
            <td>
              <span>　　&nbsp;&nbsp;&nbsp;</span>
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </td>
          </tr>

        </tbody>
      </table>
      <div class="actions">
          <%= f.submit "新規登録", class: 'btn btn-success' %>
      </div>
    <% end %>

    <div>
      <h4>既に登録済の方</h4>
    </div>

    <%= render "devise/shared/links" %>

  </div>
</div>



