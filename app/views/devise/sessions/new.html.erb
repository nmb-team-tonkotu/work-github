<div class="row">
  <div class="col-xs-8">

    <h4>会員の方はこちらからログイン</h4>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <table class="table session_table">
      <tbody>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <td>パスワード</td>
          <td><%= f.password_field :password, autocomplete: "current-password" %></td>
        </tr>
      </tbody>
    </table>


    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "=>パスワードを忘れた方はこちら", new_password_path(resource_name) %><br />
    <% end %>




      <div class="actions">
        <%= f.submit "ログイン", class: 'btn btn-primary' %>
      </div>
    <% end %>

    <h4>会員の方はこちらからログイン</h4>

    <%= render "devise/shared/links" %>






  </div>
</div>
