
<table class="table-bordered col-xs-2 genre_table">
	<tr>
		<th><h3 class="text-center" style="margin-bottom: 20px;">ジャンル検索</h3></th>
	</tr>
	<% genres.each do |genre| %>
		<tr>
			<td style="padding:10px 0;"><%= link_to genre.sweet_genre, sweets_path(search_id: genre.id), class: 'genre-border-none', style: "font-size:18px; "%>
			</td>
		</tr>
	<% end %>
</table>
