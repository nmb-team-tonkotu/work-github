<div class="row">

	<%= render 'homes/genre', genres: @genres %>

	<div class="col-xs-10">
		<div class="top_visual">
			<div class="top_visual_content <%= ' top_visual_none' if customer_signed_in? %>">
				<P class="top_visual_text">ようこそ、NaganoCakeへ!<br>
					このサイトは、ケーキ販売のECサイトになります。<br>
					会員でない方も商品の閲覧はできますが、<br>
					購入に関しては会員登録が必要になります。
				</P>
			</div>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-xs-2"></div>
	<div class="col-xs-10">
		<h1>オススメ商品</h1>
		<div class="row">
			<% @sweets.last(4).sort.reverse.each do |sweet| %>
				<div class="col-xs-3">
					<%= link_to sweet_path(sweet.id) do %>
							<%= attachment_image_tag sweet, :image, :fill, 230, 150, format: "jpeg"%>
					<% end %>
					<p><%= link_to sweet.name,sweet_path(sweet.id) %></p>
					<p>¥<%="#{(sweet.non_taxed_price * 1.10).round }" %></p>
				</div>
			<% end %>
		</div>
	</div>
</div>