<h2>注文情報確認</h2>

<%= render 'layouts/errors', obj: @order %>

<div class="row">
	<div class="col-xs-9">
		<table class="table table-bordered">
			<thead>
				<tr class="active">
					<th>商品名</th>
					<th>単価(税込)</th>
					<th>数量</th>
					<th>小計</th>
				</tr>
			</thead>
				<% @sum = 0 %>
				<% @cart_items.each do |cart_item| %>
			<tbody>
				<tr>
					<td>
						<%= attachment_image_tag cart_item.sweet, :image, :fill, 50, 50 %>
						<%= cart_item.sweet.name %>
					</td>
					<td>
						<%= "#{(cart_item.sweet.non_taxed_price * 1.10).round }" %>
					</td>
					<td>
						<%= cart_item.sweet_count %>
					</td>
					<td>
						<%= "#{(cart_item.sweet.non_taxed_price*cart_item.sweet_count* 1.10).round }"%>
					</td>
				</tr>
				<% @sum += cart_item.sweet.non_taxed_price*cart_item.sweet_count %>
			</tbody>
				<% end %>
		</table>
	</div>

	<% (@sum *= 1.1) %>

	<div class="col-xs-3">
		<table class="table table-bordered">
			<tr>
				<th class="active">送料</th>
				<th><%= @order.postage %></th>
			</tr>
			<tr>
				<th class="active">商品合計</th>
				<th><%= @sum.round %></th>
			</tr>
			<tr>
				<th class="active">請求金額</th>
				<% @sum += @order.postage %>
				<th><%= @sum.round %></th>
			</tr>
		</table>
	</div>
</div>

<h3>支払い方法</h3>
	<%= @order.payment_method %>

<h3>お届け先</h3>
	<%= @order.postal_code %>
	<%= @order.address %>
	<%= @order.address_name %>


<%= form_for @order do |f|%>

	<%= f.hidden_field :customer_id, value: current_customer.id %>
	<%= f.hidden_field :customer_name, value: @order.customer_name %>
	<%= f.hidden_field :postal_code, value: @order.postal_code %>
	<%= f.hidden_field :address, value: @order.address %>
	<%= f.hidden_field :postage, value: @order.postage %>
	<%= f.hidden_field :billing_amount,  value: @sum.round %>
	<%= f.hidden_field :payment_method, value: @order.payment_method %>
	<%= f.hidden_field :address_name, value: @order.address_name %>

	<%= f.submit "購入を確定する", class:"btn btn-success" %>
<% end %>

