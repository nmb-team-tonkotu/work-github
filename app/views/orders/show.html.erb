<h3 class="admin_page_title">注文履歴詳細</h3>
<div class="row">
	<div class="col-xs-6">
			<h3>注文情報</h3>
		<table class="table">
			<tbody>
				<tr>
					<th class="active">注文日</th>
					<td><%= @order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
				</tr>
				<tr>
					<th class="active">配送先</th>
					<td>
						<%= @order.postal_code %><br>
						<%= @order.address %><br>
						<%= @order.address_name %>
					</td>
				</tr>
				<tr>
					<th class="active">支払方法</th>
					<td><%= @order.payment_method %></td>
				</tr>
				<tr>
					<th class="active">ステータス</th>
					<td><%= @order.status %></td>
				</tr>
			</tbody>
		</table>
	</div>
	<div class="col-xs-3">
		<h3>請求情報</h3>
		<table class="table">
			<tbody>
				<tr>
					<th class="active">商品合計</th>
					<td><%= @order.billing_amount - @order.postage %>円</td>
				</tr>
				<tr>
					<th class="active">配送料</th>
					<td><%= @order.postage %>円</td>
				</tr>
				<tr>
					<th class="active">ご請求額</th>
					<td><%= @order.billing_amount %>円</td>
				</tr>
			</tbody>
		</table>
	</div>
</div>
<div class="row">
	<div class="col-xs-10">
		<h3>注文内容</h3>
		<div>
			<table class="table">
				<thead>
					<tr>
						<th class="active">商品</th>
						<th class="active">単価（税込）</th>
						<th class="active">個数</th>
						<th class="active">小計</th>
					</tr>
				</thead>
				<tbody>
					<% @order.order_sweets.each do |order_sweet| %>
					<tr>
						<td><%= order_sweet.sweet.name %></td>
						<td><%= order_sweet.price %>円</td>
						<td><%= order_sweet.count %></td>
						<td><%= order_sweet.count*order_sweet.price %>円</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
