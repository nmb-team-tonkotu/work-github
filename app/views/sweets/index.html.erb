<div class="row">

	<%= render 'homes/genre', genres: @genres %>

	<div class="col-xs-10">
		<h1 style="margin-top: 0;">商品一覧(全<%= @sweets.count %>件)</h1>

		<div class="row">
			<% @sweets.each do |sweet| %>
				<div class="col-xs-3">
					<%= link_to sweet_path(sweet.id) do %>
							<%= attachment_image_tag sweet, :image, :fill, 230, 150, format: "jpeg"%>
					<% end %>
					<p><%= link_to sweet.name,sweet_path(sweet.id) %></p>
					<p>¥<%="#{(sweet.non_taxed_price * 1.10).round }" %></p>
				</div>
			<% end %>
		</div>
	</div>

</div>

