<div class="row">

	<table class="table-bordered col-xs-2">
		<tr>
			<th><h3>ジャンル検索</h3></th>
		</tr>
		<% @genres.each do |genre| %>
			<tr>
				<td><%= link_to genre.sweet_genre, sweets_path(search_id: genre.id)%></td>
			</tr>
		<% end %>
	</table>

	<div class="col-xs-10">
		<h1>商品一覧(全<%= @sweets.count %>件)</h1>

		<div class="row">
			<% @sweets.each do |sweet| %>
				<div class="col-xs-3">
					<%= link_to sweet_path(sweet.id) do %>
							<%= attachment_image_tag sweet, :image, :fill, 230, 150, format: "jpeg"%>
					<% end %>
					<p><%= link_to sweet.name,sweet_path(sweet.id) %></p>
					<p>¥<%="#{(sweet.non_taxed_price * 1.10).round }" %></p>
				</div>
			<% end %>
		</div>
	</div>

</div>

